<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <uz.med.ui_core.RoundedImageView
        android:id="@+id/img_upcoming_movie"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="8dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/transparentBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/tv_movie_release_date"
        app:layout_constraintEnd_toEndOf="@id/img_upcoming_movie"
        app:layout_constraintStart_toStartOf="@id/img_upcoming_movie"
        tools:text="Fantastic beasts" />

    <TextView
        android:id="@+id/tv_movie_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="@id/img_upcoming_movie"
        app:layout_constraintEnd_toEndOf="@id/img_upcoming_movie"
        app:layout_constraintStart_toStartOf="@id/img_upcoming_movie"
        tools:text="15-09-2220" />

</androidx.constraintlayout.widget.ConstraintLayout>
